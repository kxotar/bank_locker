<div class="row">
  <div class="col-md-6"><h4>My Locker Visit Appointments</h4></div>
  <div class="col-md-6">
    <a class="btn btn-default pull-right" data-toggle="modal" data-target="#myModal">Schedule new Appointment</a>
  </div>
</div>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>Appointment ID</th>
      <th>Appointment Date</th>
      <th>Appointment Time</th>
      <th>Appointment Status</th>
    </tr>
  </thead>

  <tbody>
    <% @my_locker_visits.each do |appointment| %>
      <tr>
        <td><%= appointment.id %></td>
        <td><%= appointment.visit_date_time.strftime('%d-%m-%Y') %></td>
        <td><%= appointment.visit_date_time.strftime('%I:%M%p') %></td>
        <td><%= appointment.visit_status&.humanize %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr>


  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Schedule New Appointment</h4>
        </div>
        <div class="modal-body">
          <%= form_for :appointment do |f| %>
            <div class="form-group">
              <%= f.datetime_select :visit_date_time, :default => (Time.now + 2.hours), :html=>{class: "form-contol"} %>
            </div>
            <%= f.submit class: "btn btn-default" %>
          <% end %>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
